#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct _student* Position;
typedef struct _student Student;

struct _student{
    char ime[32];
    char prezime[32];
    int god_rod;
    Position Next;
};


int InsertB(Position q);
int InsertE(Position q);
int PrintList(Position q);
Position FindSur(Position q);
int PrintMenu();

int main()
{   int i=-1;
	Student Head;
	Head.Next = NULL;
	

 while (i!= 0)
    {
        PrintMenu();
        scanf("%d", &i);
        switch (i)
        {
        case 1:
            InsertB(&Head);
            break;
        case 2:
           PrintList(Head.Next);
            break;
        case 3:
        	InsertE(&Head);
        	break;
        case 4:
        	FindSur(&Head);
        	break;
	  default:
            printf("\nPogresan unos!");
            
		}
}

	return 0;
	
}

int PrintMenu(){
	printf("\nOdaberi izbor\n1. InsertB\n2. Printlist\n3. InsertEnd\n4. Pronadi prezime\n Exit. Izadji\n\n");
	return 0;
}

int InsertE(Position q) {

	while (q->Next != NULL)
	q = q->Next;
	InsertB(q);
		
	return 0;
}
	
int InsertB(Position q) {

	Position p;
	p = (Position)malloc(sizeof(Student));
	if (p == NULL)
		return -1;


	printf("Unesite ime prezime i godinu rodjenja:\n\n");
	scanf("%s %s %d", p->ime, p->prezime, &p->god_rod);

	p->Next = q->Next;
	q->Next = p;
	
	return 0;
}

int PrintList(Position q){
	printf("Ispis liste:\n\n");

	while (q != NULL) {
		printf("%s %s %d\n", q->ime, q->prezime, q->god_rod);
		q = q->Next;
	}
	return 0;

}

Position FindSur(Position q) {

	char prez[32];
	printf("Unesite prezime koje zelite pronaci: ");
	scanf("%s/n", prez);

	while (q != NULL && strcmp(q->prezime, prez) != 0)
		q = q->Next;
		
	printf(" %s %s %d", q->ime, q->prezime, q->god_rod );

	return q;
}
