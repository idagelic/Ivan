#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct _student* Position;
typedef struct _student Student;

struct _student{
    char ime[32];
    char prezime[32];
    int god_rod;
    Position Next;
};


int Insert(Position q);
int PrintList(Position q);
int PrintMenu();

int main()
{

	int case=-1;
	Student Head;
	Head.Next = NULL;


 while (case != 0)
    {
        PrintMenu();
        scanf("%d", &case);
        switch (case)
        {
        case 1:
            Insert(&Head);
            break;
        case 2:
           PrintList(Head.Next);
            break;
	  default:
            printf("\nPogresan unos!");

		}
}


	return 0;

}
int PrintMenu(){
	printf("Odaberi izbor\n1. Insert\n2. Printlist\nExit. Izadji");
	return 0;
}

int Insert(Position q) {

	Position p;
	p = (Position)malloc(sizeof(Student));
	if (p == NULL)
		return -1;


	printf("Unesite ime prezime i godinu rodjenja:\n");
	scanf("%s %s %d", p->ime, p->prezime, &p->god_rod);

	p->Next = q->Next;
	q->Next = p;


}

int PrintList(Position q){

	printf("Ispis liste:\n\n");

	while (q != NULL) {
		printf("%s %s %d\n", q->ime, q->prezime, q->god_rod);
		q = q->Next;
	}


}
